#!/usr/bin/env bash

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m'

_usage() {
  echo
  echo -e "Hi $(whoami)!"
  echo
  echo -e "${GREEN}Workflow${NC}"
  echo
  echo -e "${YELLOW}make${NC}       show this usage text"
  echo -e "${YELLOW}make data${NC}  fetch data"
  echo
}
_usage
